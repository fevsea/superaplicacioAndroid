<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.pr_idi.mydatabaseexample.About">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:navigationIcon="?attr/homeAsUpIndicator" />

    </android.support.design.widget.AppBarLayout>

    <TextView
    android:id="@+id/gitMarc"
    android:autoLink="web"
    android:layout_width="wrap_content"
        android:textColor="@color/title"
    android:layout_height="wrap_content"
    android:text="@string/txtGritMark"
    android:layout_below="@+id/gitAlej"
    android:layout_alignStart="@+id/gitAlej"
    android:textSize="18sp" />

<TextView
    android:textStyle="bold"
    android:textColor="@color/title"
    android:text="App made by:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView"
    android:layout_below="@+id/appBar"
    android:layout_alignParentStart="true"
    android:layout_marginTop="32dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:textSize="22sp" />

    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:text="Practice for IDI \nwinter course 2016/2017"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/year"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/gitMarc" />

    <TextView
        android:id="@+id/gitAlej"
        android:autoLink="web"
        android:textColor="@color/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtCredits"
        android:textSize="18sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
